<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".OrderDetailScreen">

    <me.zhanghai.android.materialprogressbar.MaterialProgressBar
        android:id="@+id/progressbar"
        style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:indeterminate="true"
        android:indeterminateTint="@color/colorPrimary"
        app:mpb_progressStyle="horizontal"
        app:mpb_useIntrinsicPadding="false" />



    <TextView
        android:id="@+id/ref_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ref Number"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"></TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/rec_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Receiver Name"></TextView>

        <TextView
            android:id="@+id/rec_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Receiver Name"></TextView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/rec_telnumber_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telephone Number"></TextView>

        <TextView
            android:id="@+id/rec_telnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Telephone Number"></TextView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/rec_address_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"></TextView>

        <TextView
            android:id="@+id/rec_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Address"></TextView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/rec_nearby_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nearby Location"></TextView>

        <TextView
            android:id="@+id/rec_nearby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Nearby Location"></TextView>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/grey"
        android:layout_marginBottom="10dp"></LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/order_detail_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>